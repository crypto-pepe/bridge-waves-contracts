{
  "trailingComma": "es5",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "**/*.{yml,yaml,json}",
      "options": {
        "semi": false,
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.{js,ts}",
      "options": {
        "semi": true,
        "tabWidth": 2
      }
    },
    {
      "files": "**/*.ride",
      "options": {
        "semi": false,
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
